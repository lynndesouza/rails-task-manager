<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
    <p><i class="fas fa-check"></i>  <%= link_to task.title, task_path(task) %></p>
    <% else %>
    <p><i class="fas fa-times"></i>  <%= link_to task.title, task_path(task) %></p>
    <% end %>
  <% end %>
</ul>

<i class="fas fa-plus"></i> <%= link_to "Add a new task", new_task_path %>
